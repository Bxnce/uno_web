# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                            controllers.HomeController.home()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)


# Controlling the game via the controller and GET requests, POST doesn't display the returned HTML. 

GET     /game/setup                  controllers.HomeController.setup()

GET     /game/undo                   controllers.HomeController.undo()

GET     /game/redo                   controllers.HomeController.redo()

GET     /game/start/:name1/:name2 	 controllers.HomeController.create_game(name1: String, name2:String)

GET     /game/next                   controllers.HomeController.next()

GET     /game/place/:i               controllers.HomeController.place(i: Int) 

GET     /game/take                   controllers.HomeController.take()



# ERROR routing
GET     /notfound            controllers.HomeController.notFound()
GET     /badrequest/         controllers.HomeController.badRequest(message: String)